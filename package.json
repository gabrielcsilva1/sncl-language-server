{
  "name": "sncl-language-server",
  "displayName": "sncl-language-server",
  "description": "Um servidor de linguagem integrado com o VSCode para a linguagem sNCL (simple NCL).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sncl"
  ],
  "main": "client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sncl",
        "extensions": [
          ".sncl"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint:check": "npx @biomejs/biome lint client server",
    "lint:format": "npx @biomejs/biome format --write client server",
    "lint:fix": "npx @biomejs/biome check --write client server",
    "pretest": "npm run compile",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^22.17.0",
    "typescript": "^5.6.3"
  }
}
