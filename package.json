{
  "name": "sncl-language-server",
  "displayName": "sncl-language-server",
  "description": "Um servidor de linguagem integrado com o VSCode para a linguagem sNCL (simple NCL).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "sncl.compile",
          "when": "resourceLangId == sncl",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "sncl.compile",
        "title": "Compile sNCL",
        "icon": "$(play)"
      }
    ],
    "grammars": [
      {
        "language": "sncl",
        "scopeName": "source.sncl",
        "path": "./language/sncl.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "sncl",
        "extensions": [
          ".sncl"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm run check-types && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "gen:cst-types": "tsx server/scripts/generate-cst-types",
    "lint:check": "biome lint client server",
    "lint:format": "biome format --write client server",
    "lint:fix": "biome check --write client server",
    "pretest": "npm run compile",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^22.17.0",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts, md}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
